<!DOCTYPE html>
<html>
<head>
  <title>DbcOverflow</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>


<% if current_user %>
  <p>Hey you're logged in</p>
  <%= link_to "Signout", session_path(session[:user_id]), :method => :delete %>
<% else %>
  <%= link_to "Signup", new_user_path %>
  <%= link_to "Signin", new_session_path %>
<% end %>

<%= yield %>

</body>
</html>

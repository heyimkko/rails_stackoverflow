
<h1>Sign up</h1>
<div>
  <%= form_for @user do |f| %>
</div>
<div>
  <%= f.label :name %>
  <%= f.text_field :name %>
</div>
<div>
  <%= f.label :email %>
  <%= f.text_field :email %>
</div>  
<div>
  <%= f.label :password %>
  <%= f.password_field :password %>
</div>
<div>
    <%= f.submit "Sign up" %>
</div>
<% end %>

